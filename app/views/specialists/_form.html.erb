<%= form_for(@specialist) do |f| %>
  <%= f.text_field :name, placeholder: "Naam specialist.." %>
  <br />
  <%= f.text_field :profession, placeholder: "Functie specialist.." %>
  <br />
  <%= f.text_area :bio, rows: 10, placeholder: "Over de specialist.." %>
  <br />
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <br />
<% end %>