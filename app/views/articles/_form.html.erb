<%= form_for @article do |content| %>

<%= content.label "Berichttitel:" %><br />
<%= content.text_field :title %><br />

<%= content.label "Auteur" %><br />
<%= content.text_field :author %><br />

<%= content.label "Inhoudcontent" %><br />
<%= content.text_area :content %><br />

<%= content.label "Bron" %><br />
<%= content.text_field :source %><br />

<%= content.fields_for :questions do |builder| %>
  <%= render 'question_fields', :f => builder %>
<% end %>

<%= content.label "Uitleg specialist" %><br />
<%= content.text_area :explanation %><br />

<%= content.collection_select :specialist_id, Specialist.order(:name),:id,:name, include_blank: false %>

<%= content.submit "Publiceer artikel", class: "btn btn-primary" %>
<% end %>
