<%= form_for @article do |content| %>

<%= content.label "Berichttitel:" %><br />
<%= content.text_field :title %><br />

<%= content.label "Auteur" %><br />
<%= content.text_field :author %><br />

<%= content.label "Inhoudcontent" %><br />
<%= content.text_area :content %><br />

<%= content.label "Bron" %><br />
<%= content.text_field :source %><br />

