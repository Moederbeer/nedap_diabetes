<% if @article.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Dit formulier bevat <%= @article.errors.count %> fout(en).
    </div>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>