<% if @article.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <span>Dit formulier bevat <%= @article.errors.count %> fout(en).</span>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg.capitalize %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
