<% if @specialist.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Dit formulier bevat <%= @specialist.errors.count %> fout(en).
    </div>
    <% @specialist.errors.full_messages.each do |msg| %>
      <%= msg.capitalize %><br />
    <% end %>
  </div>
<% end %>