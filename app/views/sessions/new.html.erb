<% content_for :body_class, 'onboarding' %>

<div class=" section container">
  <%= link_to 'Vorige', 'javascript:history.go(-1);' %>
  <h1 class="page-title center">Inloggen</h1>
  <p class="center">
    Welkom terug. <br >
    Na het inloggen gaan we weer van start.
  </p>
</div>

<div class="section image">
  afbeelding komt hier
</div>

<div class="section action">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.email_field :email, placeholder: "E-mail..", class:"input" %>
    <%= f.password_field :password, placeholder: "Wachtwoord..", class:"input" %>

    <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    Onthoud mij <br />
    <%= link_to 'Wachtwoord vergeten?', new_password_reset_path %>
  <% end %>

  <%= f.submit "Inloggen", class: "button blue" %>
  <% end %>
</div>
