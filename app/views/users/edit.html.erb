<% @back_or_search = "back" %>
<%= render 'shared/header' %>

<div class="container">
  <% provide(:button_text, "Wijzigingen opslaan")%>
  <h1 class="page-title">Update je profiel</h1>

  <%= form_for @user do |f| %>
  <%= f.email_field :email, placeholder: "Email..", class:"input" %>
  <%= f.password_field :password, placeholder: "Wachtwoord..", class:"input" %>
  <%= f.password_field :password_confirmation, placeholder: "Bevestig wachtwoord..", class:"button blue" %>
  <% end %>
</div>
<%= render 'shared/tabbar' %>
