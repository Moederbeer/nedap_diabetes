 
  <%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.email_field :email, placeholder: "Email.." %> <br />
  <%= f.password_field :password, placeholder: "Wachtwoord.." %> <br />
  <%= f.password_field :password_confirmation, placeholder: "Bevestig wachtwoord.." %> <br />

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>