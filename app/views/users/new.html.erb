<%= link_to 'Vorige', 'javascript:history.go(-1);' %>

<% provide(:button_text, "Aanmelden") %>
<h1>Aanmelden</h1>

<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <%= render "#{@user.current_step}_step", :f => f %>
  <p><%= f.submit "Terug", :name => "back_button" unless @user.first_step? %></p>
<% end %>